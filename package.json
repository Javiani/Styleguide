{
  "name": "living-styleguide",
  "version": "1.0.0",
  "description": "Living Style Guide Environment",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "mkdir -p www/assets/dist/css/pages ; mkdir -p www/assets/dist/css/pages/guideline ; npm run watch:css & npm run watch:js",
    "watch:css": "stylus www/assets/styl/pages/guideline -o www/assets/dist/css/pages/guideline -w -u jeet",
    "watch:js": "webpack --watch --dev",
	"build":"stylus www/assets/styl/pages -o www/assets/dist/css/pages -u jeet -c && webpack",
	"server":"node server"
  },
  "generate":{
	"src":"pages",
	"out":"_site"
  },
  "author": "Javiani",
  "license": "ISC",
  "dependencies": {
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.2",
    "babel-preset-es2015": "^6.5.0",
    "express": "^4.14.0",
    "glob": "^7.0.0",
    "nunjucks": "^2.4.2",
    "showdown": "^1.3.0",
    "webpack": "^1.12.13"
  },
  "devDependencies": {
    "jails-components": "git://github.com/jails-org/Components.git",
    "jails-js": "^1.4.2",
    "jails-modules": "git://github.com/jails-org/Modules.git",
    "jeet": "^6.1.2",
    "jquery": "^3.0.0",
    "scriptjs": "^2.5.8",
    "stylus": "^0.53.0"
  }
}
