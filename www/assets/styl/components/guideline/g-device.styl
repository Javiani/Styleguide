.g-device

	text-align:center
	margin-bottom:20px

	iframe
		border:none

	.g-device-inner
		display:inline-block
		border:1px solid #33373A
		border-width:60px 16px
		border-radius: 36px

	&.-phone
		iframe
			width:360px
			height:640px

	&.-phone-landscape
		.g-device-inner
			border-width:16px 60px
		iframe
			width:600px
			height:337px

	&.-tablet
		iframe
			width:720px
			height:960px

	&.-tablet-landscape
		.g-device-inner
			border-width:16px 60px
		iframe
			width:1024px
			height:768px

	&.-desktop
		.g-device-inner
			border-width:0
			display:block

		iframe
			width:100%
			height:1024px
