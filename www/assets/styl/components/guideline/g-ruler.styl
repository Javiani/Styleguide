.g-ruler
    position:relative
    font-weight:bold
    text-align:center
    border:1px solid silver
    margin:20px 0
    overflow:hidden

    .item
        position:relative
        border:1px solid silver
        border-top:none
        border-bottom:none
        height:15px
        margin:0 auto
        line-height:100%

        a
            position:absolute
            width:100%
            height:100%
            top:0
            left:0
            font-size:0

            &:hover, &.-active
                font-size:11px
                background-color:#eee

            &:before
                float:left
                margin-left:5px

            &:after
                float:right
                margin-right:5px

    .-desktop
        width:desktop
        z-index:5
        @media (max-width:desktop)
            width:auto
        a:before
            content:'1366'
        a:after
            content:'1366'


    .-tablet-landscape
        width:tablet-landscape
        z-index:4
        @media (max-width:tablet-landscape)
            width:auto
        a:before
            content:'1024'
        a:after
            content:'1024'

    .-tablet
        width:tablet
        z-index:3
        @media (max-width:tablet)
            width:auto
        a:before
            content:'720'
        a:after
            content:'720'


    .-phone-landscape
        width:phone-landscape
        z-index:2
        @media (max-width:phone-landscape)
            width:auto
        a:before
            content:'600'
        a:after
            content:'600'

    .-phone
        width:phone
        z-index:1
        a:before
            content:'360'
        a:after
            content:'360'
