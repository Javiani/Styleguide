.g
	font-family: Source Sans Pro, Arial, sans-serif
a.g
	color:#d52b1e
hr.g
	border:none
	border-bottom:1px solid #ededed
	margin:20px 0 10px

pre.g::before,
.g-example::before
	position: absolute
	left: 0
	top: 0
	padding: 5px 10px
	color: #959595
	text-transform: uppercase
	font-size: 9px
	display:block
	border-bottom: 1px solid #e1e1e8
	border-right: 1px solid #e1e1e8
	border-radius: 4px

code
	padding: 2px 4px
	color: #c7254e
	background-color: #f9f2f4
	border-radius: 4px

pre.g
	padding: 35px 14px 15px
	margin-bottom: 14px
	background-color: #f7f7f9
	border: 1px solid #e1e1e8
	border-radius: 4px
	display: block
	color: #2f6f9f
	font-family: Monaco, Consolas, "Courier New", monospace
	font-size: 12px
	position: relative

	&:before
		content:'Code'

	code
		padding:0
		color:inherit
		background-color: transparent
		border:0
		font-size: inherit

ul.g
	list-style-type:circle
	padding:10px 45px
	margin-bottom:15px

	li
		margin-bottom:5px
	a
		color:#58585B
		&:hover
			color:#D4D2D2

blockquote.g
	padding: 10px
	border: 1px solid #ededed
	border-left: 5px solid #1b809e
	margin: 0 auto 20px
	*
		margin: 0

.g-example
	position: relative;
	padding: 35px 14px 15px
	border: 1px solid #ededed
	border-radius: 4px
	margin:15px 0 15px

	&:before
		content: 'Example'
