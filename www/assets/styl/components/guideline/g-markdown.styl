.g-markdown

	font-family: Source Sans Pro, Arial, sans-serif

	a
		color:#d52b1e
	hr
		border:none
		border-bottom:1px solid #ededed
		margin:20px 0 10px

	code
		display:inline-block
		padding:1px 5px
		background-color:#f0f0f0
		border-radius:5px
		color:#d52b1e

	ul
		list-style-type:circle
		padding:10px 45px
		margin-bottom:15px

		li
			margin-bottom:5px
		a
			color:#58585B
			&:hover
				color:#D4D2D2
