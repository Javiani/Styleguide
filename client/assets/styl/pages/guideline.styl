@import '//fonts.googleapis.com/css?family=Open+Sans:300,300i,500,500i,700,700i'
@import 'theme'
@import 'layouts/guideline'
@import 'components/guideline/markdown'
@import 'components/guideline/menu'

.gl-header
	color: #fff
	font-family: main-font
	box-shadow: 1px 4px 6px -2px rgba(0, 0, 0, 0.4)
	background-image: url( header-image )
	background-size: cover

	h2.gl
		font-weight: normal

	&:after
		content:''
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 100%
		background-color: rgba( main-color, .9 )

	.gl-holder
		position: relative
		z-index: 3

.gl-sidebar
	h2.gl
		font-weight: 200

.gl-menu
	font-size: 12px
	font-family: main-font
	.title
		text-transform: uppercase

.gl-full
	&, .gl-header
		height: 100%

.gl-content
	h2.gl
		padding: 10px 0
		color: main-color
		border-bottom: 1px solid #ededed
		font-weight: normal
	pre.gl
		margin-bottom: 50px

.gl-component
	border: 1px solid #ededed
	border-radius: 4px
	margin: 25px 0
	padding: 15px 15px
