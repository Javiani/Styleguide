.gl-markdown

	font-family: 'Open Sans'

	h1.gl, h2.gl, h3.gl, h4.gl, h5.gl, h6.gl
		margin-bottom: 20px
		font-weight: normal

	p.gl
		font-size: 14px
		line-height: 1.5em
		margin-bottom: 10px

	a.gl
		color:main-color
	hr.gl
		border:none
		border-bottom:1px solid #ededed
		margin:20px 0 10px

	pre.gl::before, .gl-example::before
		position: absolute
		left: 0
		top: 0
		padding: 5px 10px
		color: main-color
		text-transform: uppercase
		font-size: 9px
		display:block
		border-bottom: 1px solid #e1e1e8
		border-right: 1px solid #e1e1e8
		border-radius: 4px

	code
		padding: 2px 4px
		color: main-color
		background-color: #f9f2f4
		border-radius: 4px

	pre.gl
		padding: 35px 14px 15px
		margin-bottom: 14px
		background-color: #f7f7f9
		border: 1px solid #e1e1e8
		border-radius: 4px
		display: block
		color: main-color
		font-family: Monaco, Consolas, "Courier New", monospace
		font-size: 12px
		position: relative

		&:before
			content:'Code'

		code
			padding:0
			color:inherit
			background-color: transparent
			border:0
			font-size: inherit

	ul.gl
		list-style-type: disc
		padding: 10px 45px
		margin-bottom:15px

		li
			margin-bottom:5px
		a
			color: main-color
			text-decoration: none
			&:hover
				color: #D4D2D2

	blockquote.gl
		padding: 10px
		border: 1px solid #ededed
		border-left: 5px solid #1b809e
		margin: 0 auto 20px
		*
			margin: 0

	table.gl
		border-bottom: 1px solid #ededed
		border-right: 1px solid #ededed
		border-collapse: collapse

		td
			padding: 15px
			border-top: 1px solid #ededed
			border-left: 1px solid #ededed
