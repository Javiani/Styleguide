{% import 'components/jails.njk' as jails %}
{% import 'components/guideline/sidebar.njk' as sidebar %}
{% import 'components/head.njk' as head %}

{% set app = 'guideline ' + app if app else 'guideline' %}

<!DOCTYPE html>
<html lang="pt-BR" class="gl-html">
<head>

	<title>
		{% block title %} Guideline Page {% endblock %}
	</title>

	{{ head.metatags() }}

	{% block styles %}
		<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.5.0/styles/arduino-light.min.css" />
		<link rel="stylesheet" href="/assets/dist/css/guideline.css" />
	{% endblock %}

	{% block scripts %}
		<script type="text/javascript" id="main-script" src="/assets/dist/js/main.min.js" data-application="/assets/dist/js/guideline/index.min.js" async></script>
	{% endblock %}

</head>

	<body class="gl-body" {{ jails.component(app) }}>

		{% block aside %}
			<aside class="gl-sidebar">
				{{ sidebar.menu() }}
			</aside>
		{% endblock %}

		<section class="gl-container {{ "gl-full" if full }}">

			<header class="gl-header">
				<div class="gl-holder">
					<h2 class="gl">Styleguide /</h2>
					<h1 class="gl">{% block header %}Guideline{% endblock %}</h1>
				</div>
			</header>

			<div class="gl-holder gl-content">
				{% block content %}{% endblock %}
			</div>

		</section>

	</body>

</html>
