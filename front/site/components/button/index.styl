.button
	background-color: main-color
	border: 1px solid transparent
	color: #fff
	border-radius: 30px
	padding: 15px 40px
	display: block
	cursor: pointer
	outline: none
	font-size: 15px

.button:hover:not([disabled])
	background-color: transparent
	color: main-color
	border-color: main-color

.button[disabled]
	opacity: .8
	border: 1px solid transparent
	color: #fff

.button.-inverted
	background-color: transparent
	border: 1px solid main-color
	color: main-color
.button.-inverted:hover
	background-color: main-color
	color: #fff
