@require 'core'
@import 'guideline/layouts'
@import 'guideline/components/markdown/'
@import 'guideline/components/menu/'

body
	font-family: main-font

.gl-header
	font-size 22px
	color #fff
	box-shadow 1px 4px 6px -2px rgba(0,0,0,0.4)
	background-size cover
	background-image url(header-image)
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

.gl-header h2.gl
	font-weight normal
	small
		font-weight bold

.gl-header:after
	content ''
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color main-color
	opacity.9

.gl-header .gl-holder
	position relative
	z-index 3

.gl-sidebar h2.gl
	font-weight 200

.gl-menu
	font-size 12px

.gl-menu .title
	text-transform uppercase

.gl-full,
.gl-full .gl-header
	height 100%

.gl-content h2.gl
	padding 10px 0
	border-bottom 1px solid #ededed
	font-weight normal

.gl-content pre.gl
	margin-bottom 50px

.gl-component
	border 1px solid #ededed
	border-radius 4px
	margin 25px 0
	padding 15px 15px
