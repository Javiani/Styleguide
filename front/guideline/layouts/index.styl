html,
body
	height: 100%

html *,
body *
	padding: 0
	margin: 0

.gl-holder
	padding: 20px 35px

.gl-header
	padding: 100px 0 20px
	position: relative

.gl-sidebar
	float: left

.gl-sidebar,
.gl-menu
	height: 100%
	width: 250px

.gl-menu
	position: fixed
	height: 100%
	box-sizing: border-box
	z-index: 9
	box-shadow: 0px 4px 10px -1px rgba(0,0,0,0.5)

.gl-container
	min-height: 100%
	padding-bottom: 100px
	box-sizing: border-box
	overflow: hidden

.footer
	height: 100px
	margin-top: -100px
	overflow: hidden
	clear: both
